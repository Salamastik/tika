<?xml version="1.0" encoding="UTF-8"?>
<properties>
<autoDetectParserConfig>
  <embeddedDocumentExtractorFactory
      class="org.apache.tika.parallel.ParallelEmbeddedDocumentExtractorFactory"/>
</autoDetectParserConfig>

<!-- הגדרות עיבוד מקבילי -->
<properties>
  <!-- מספר threads לעיבוד מקבילי (ברירת מחדל: מספר ליבות המעבד) -->
  <property name="tika.parallel.threads">4</property>
  
  <!-- גודל מקסימלי לרכיב מוטמע במגהבייטים (ברירת מחדל: 50) -->
  <property name="tika.parallel.maxSizeMB">50</property>
</properties>
<parsers>
  <parser class="org.apache.tika.parser.DefaultParser"/>
  <parser class="org.apache.tika.parser.vision.VisionLanguageModelParser">
    <mime>image/jpeg</mime>
    <mime>image/png</mime>
    <mime>image/gif</mime>
    <mime>image/webp</mime>
    <mime>image/bmp</mime>
   </parser>
  <parser class="org.apache.tika.parser.pdf.PDFParser">
			<params>
				<param name="extractInlineImages" type="bool">true</param>
				<param name="extractUniqueInlineImagesOnly" type="bool">false</param>
			</params>
		</parser>

    <parser class="org.apache.tika.parser.microsoft.ooxml.OOXMLParser">
      <params>
        <param name="extractInlineImages" type="bool">true</param>
      </params>
    </parser>
  </parsers>
</properties>
